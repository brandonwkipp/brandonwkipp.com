{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "checkJs": false,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@fragments/*": [
        "fragments/*"
      ],
      "@mocks/*": [
        "__mocks__/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@tests/*": [
        "__tests__/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@views/*": [
        "views/*"
      ]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext"
  },
  "include": [
    "*.js",
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    ".eslintrc.js",
    "scripts/.eslintrc.js"
  ],
  "exclude": [
    ".cache/*",
    "node_modules/*",
    "public/*"
  ]
}